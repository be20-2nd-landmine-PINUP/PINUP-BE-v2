<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pinup.backend.member.query.mapper.UserMapper">

    <!-- 전체 회원 목록 조회 -->
    <select id="findAllUsers" resultType="pinup.backend.member.query.dto.UserDto">
        SELECT
            user_id AS userId,
            user_name AS name,
            nickname,
            email,
            status
        FROM users
        ORDER BY user_id DESC
    </select>

    <!-- 회원 ID로 단일 조회 -->
    <select id="findUserById" parameterType="int" resultType="pinup.backend.member.query.dto.UserDto">
        SELECT
            user_id AS userId,
            user_name AS name,
            nickname,
            email,
            status
        FROM users
        WHERE user_id = #{id}
    </select>

</mapper>